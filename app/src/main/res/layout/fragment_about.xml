<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_larger"
        android:src="@drawable/logo"/>

    <TextView
        style="@style/ItemText.Gray.Normal"
        android:id="@+id/about_version"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_larger"
        tools:text="v1.0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_while"
        android:paddingTop="@dimen/margin_normal"
        android:paddingBottom="@dimen/margin_normal"
        android:paddingLeft="@dimen/margin_large"
        android:paddingRight="@dimen/margin_large"
        android:layout_margin="@dimen/margin_large">

        <TextView
            style="@style/About.ItemLable"
            android:id="@+id/about_update"
            android:text="检查更新"/>

        <View style="@style/Divider"/>

        <TextView
            style="@style/About.ItemLable"
            android:id="@+id/about_nor_order"
            android:text="普通工单统计"/>

        <View style="@style/Divider"/>

        <TextView
            style="@style/About.ItemLable"
            android:id="@+id/about_fix_order"
            android:text="故障工单统计"/>

        <View style="@style/Divider"/>

        <TextView
            style="@style/About.ItemLable"
            android:id="@+id/about_share"
            android:text="分享给好友"/>

        <View style="@style/Divider"/>

        <TextView
            style="@style/About.ItemLable"
            android:id="@+id/about_thanks"
            android:text="感谢"/>

    </LinearLayout>

</LinearLayout>
