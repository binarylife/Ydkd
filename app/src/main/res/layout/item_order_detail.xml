<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_scenery_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardElevation="3dp"
      app:cardCornerRadius="4dp"
      android:layout_margin="10dp"
      android:background="@color/windowBackground"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <RelativeLayout
          android:id="@+id/item_consumer_detail_top_layout"
          android:layout_width="match_parent"
          android:layout_height="@dimen/consumer_detail_top_layout_height"
          tools:background="@color/green_light"
          >
        <ImageView
            android:id="@+id/item_consumer_detail_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_large"
            android:src="@drawable/ic_parking"
            />

        <TextView
            style="@style/ListItemMoney"
            android:id="@+id/item_consumer_detail_money"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_large"
            tools:text="$ 600"
            />

        <ImageView style="@style/ConsumerDetail.Wave"/>

      </RelativeLayout>

      <TextView
          style="@style/ItemText.Gray.Normal"
          android:id="@+id/item_consumer_detail_tag"
          android:layout_below="@id/item_consumer_detail_top_layout"
          android:drawableLeft="@drawable/ic_tag"
          android:drawablePadding="@dimen/margin_normal"
          android:layout_marginLeft="@dimen/margin_large"
          android:layout_marginTop="@dimen/margin_normal"
          tools:textColor="@color/green_light"
          tools:text="加油费用"
          />
      <TextView
          style="@style/ItemText.Gray.Normal"
          android:id="@+id/item_consumer_detail_time"
          android:layout_below="@id/item_consumer_detail_tag"
          android:drawableLeft="@drawable/ic_time"
          android:drawablePadding="@dimen/margin_normal"
          android:layout_marginLeft="@dimen/margin_large"
          android:layout_marginTop="@dimen/margin_normal"
          tools:text="2016-05-23"
          />

      <ImageView
          android:id="@+id/item_consumer_detail_notes_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/item_consumer_detail_time"
          android:src="@drawable/ic_notes"
          android:layout_marginLeft="@dimen/margin_large"
          android:layout_marginTop="@dimen/margin_normal"
          android:layout_marginRight="@dimen/margin_normal"
          android:visibility="gone"/>
      <TextView
          android:layout_marginLeft="@dimen/margin_large"
          style="@style/ItemText.Gray.Normal"
          android:drawableLeft="@drawable/ic_notes"
          android:drawablePadding="@dimen/margin_normal"
          android:id="@+id/item_consumer_detail_notes"
          android:layout_below="@id/item_consumer_detail_time"
          android:layout_toRightOf="@id/item_consumer_detail_notes_icon"
          android:layout_marginTop="@dimen/margin_normal"
          android:layout_marginBottom="5dp"
          android:layout_marginRight="@dimen/margin_normal"
          />
    </RelativeLayout>
  </android.support.v7.widget.CardView>
</RelativeLayout>
