<resources>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.Trans">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- 加载动画Dialog -->
    <style name="Dialog"
        parent="@android:style/Theme.Dialog">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:background">@null</item>
    <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="BaseActivity"
        parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="usercenter_l"
        parent="AppTheme">
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ConsumerDetail"/>
    <style name="ConsumerDetail.ItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:paddingBottom">@dimen/margin_large</item>
        <item name="android:background">@drawable/bg_main_item</item>
    </style>
    <style name="ConsumerDetail.Wave">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">-2dp</item>
        <item name="android:background">@drawable/wave</item>
    </style>
    <style name="ConsumerDetail.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_cyan</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColorHint">@color/primary_light</item>
    </style>
    <style name="AddConsumerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="ListItemMoney">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_item_money</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ItemText.Gray">
        <item name="android:textColor">@color/secondary_text</item>
    </style>
    <style name="ItemText.Gray.Normal">
        <item name="android:textSize">@dimen/font_small</item>
    </style>
    <style name="ItemText_Black_Large">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>
    <style name="ItemText_Black_right">
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_marginLeft">@dimen/spacing_tiny</item>
    </style>
</resources>
